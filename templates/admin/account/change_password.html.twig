{% extends 'admin/base.html.twig' %}

{% block title %}
    Change Password
{% endblock %}

{% block breadcrumb %}

    <li class="breadcrumb-item">
        <a href="{{ path('dashboard')}}">Admin</a>
    </li>
    <li class="breadcrumb-item active">Change Password</li>

{% endblock %}

{% block body %}

    {{ form_start(form) }}
    <div class="card">
        <div class="card-header">
            <h2>
                <i class="fas fa-user-alt"></i>
                Change My Password
            </h2>
        </div>
        <div class="card-body">

            <div class="form-group">
                <label for="current_password">Current Password:</label>
                <input type="password" name="current_password" id="current_password" class="form-control" required placeholder="Enter your current password">
            </div>

            <div class="form-group">
                <label for="change_password_password_first">New Password:</label>
                {{form_widget(form.password.first, {'attr': {'class': 'form-control' , 'placeholder': 'Enter a new password' }})}}
            </div>

            <div class="form-group">
                <label for="change_password_password_second">Confirm Password:</label>
                {{form_widget(form.password.second, {'attr': {'class': 'form-control' , 'placeholder': 'Enter the new password again' }})}}
            </div>
            
            <div class="text-danger">
                {{ form_errors(form.password.first) }}
                {{ form_errors(form.password.second) }}
            </div>

        </div>

        <div class="card-footer">
            <button class="btn btn-success" style="width: 150px;">
                Save
                                &nbsp;
                <i class="fas fa-save"></i>
            </button>
            <a href="{{ path('dashboard') }}" class="btn btn-secondary">
                Cancel
                <i class="fas fa-window-close"></i>
            </a>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}
