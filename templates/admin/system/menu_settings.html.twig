{% extends 'admin/base.html.twig' %}

{% block title %}
    Menu Settings
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('dashboard')}}">Admin</a>
    </li>
    <li class="breadcrumb-item">
        System
    </li>

    <li class="breadcrumb-item active">
        Menu Settings
    </li>

{% endblock %}


{% block body %}

    {{ form_start(form) }}
    <div class="card">
        <div class="card-header">
            <h2>
                <i class="fas fa-wrench"></i>
                Edit Menu dimensions
            </h2>
        </div>
        <div class="card-body">

            <div class="form-group">
                <label for="menu_settings_menu_cover_height">Menu Cover Height (in px):</label>
                {{ form_widget(form.menu_cover_height, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Enter menu cover height in px' } }) }}
            </div>

            <div class="form-group">
                <label for="menu_settings_menu_page_height">Menu Page Height (in px):</label>
                {{ form_widget(form.menu_page_height, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Enter menu pages height in px' } }) }}
            </div>

            <div class="text-danger">
                {{form_errors(form.menu_cover_height)}}
                {{form_errors(form.menu_page_height)}}
            </div>

        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}
