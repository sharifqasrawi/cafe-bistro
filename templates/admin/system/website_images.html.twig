        .card img {
            height: 150px;
        }
    </style>
{% endblock %}


{% block body %}

    <div class="row">
        <div class="col-lg-3 col-md-6 col-sm-6">
            {{ form_start(formAppLogo, { 'attr': { 'action': path('change_logo_image') } }) }}
            <input type="hidden" name="type" value="logo">
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fas fa-image"></i>
                        Website Logo
                    </h4>
                </div>

                <div class="card-body">
                    <img src="{{ asset('assets/images/uploads/' ~ SystemSettings.AppLogo) }}" width="100%" class="img-thumbnail">

                    <div class="custom-file mt-3">
                        {{form_widget(formAppLogo.AppLogo, {'attr': {'class': 'form-control custom-file-input'  }})}}
                        <label class="custom-file-label">Choose a file...</label>
                    </div>

                    <div class="text-danger">
                        {{ form_errors(formAppLogo.AppLogo) }}
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-success btn-block">
                        Change
                        <i class="fas fa-check-circle"></i>
                    </button>
                </div>
            </div>
            {{ form_end(formAppLogo) }}
        </div>

