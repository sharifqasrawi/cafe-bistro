{% extends 'admin/base.html.twig' %}

{% block title %}
    Website Images
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('dashboard')}}">Admin</a>
    </li>
    <li class="breadcrumb-item">
        System
    </li>
    <li class="breadcrumb-item active">
        Website Images
    </li>

{% endblock %}

{% block StyleSheets %}
    <style>
        .card {
            height: 360px;
