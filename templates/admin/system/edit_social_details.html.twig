{% extends 'admin/base.html.twig' %}

{% block title %}
    Social Media
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('dashboard')}}">Admin</a>
    </li>
    <li class="breadcrumb-item active">
        Social Media Details
    </li>

{% endblock %}


{% block body %}
    {{ form_start(form) }}
    <div class="card">
        <div class="card-header">
            <h2>
                <i class="fas fa-share-alt"></i>
                Edit Social Media Details
            </h2>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="social_Facebook_Link">Facebook Page Link:</label>
                {{form_widget(form.Facebook_Link, {'attr': {'class': 'form-control'  }})}}
            </div>

            <div class="form-group">
                <label for="social_Facebook_Page_Iframe">Facebook Iframe Link:</label>
                {{form_widget(form.Facebook_Page_Iframe, {'attr': {'class': 'form-control'  }})}}
            </div>

            <div class="form-group">
                <label for="social_Twitter_Link">Twitter Page Link:</label>
                {{form_widget(form.Twitter_Link, {'attr': {'class': 'form-control'  }})}}
            </div>


            <div class="form-group">
                <label for="social_Instagram_Link">Instagram Page Link:</label>
                {{form_widget(form.Instagram_Link, {'attr': {'class': 'form-control'  }})}}
            </div>


            <div class="text-danger">
                {{ form_errors(form.Facebook_Page_Iframe) }}
                {{ form_errors(form.Facebook_Link) }}
                {{ form_errors(form.Twitter_Link) }}
                {{ form_errors(form.Instagram_Link) }}

            </div>

        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">
                Save
                <i class="fas fa-save"></i>
            </button>

            <a href="{{ path('dashboard') }}" class="btn btn-secondary">
                Cancel
                <i class="fas fa-window-close"></i>
            </a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
