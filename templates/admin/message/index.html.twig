{% extends 'admin/base.html.twig' %}

{% block title %}
    Messages
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('dashboard')}}">Admin</a>
    </li>
    <li class="breadcrumb-item active">
        Messages
    </li>

{% endblock %}


{% block body %}

    <div class="card">
        <div class="card-header">
            <h2>
                <i class="fa fa-envelope" aria-hidden="true"></i>
                Messages
            </h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Subject</th>
                            <th>Date</th>
                            <th>IsSeen</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for message in messages %}
                            <tr>
                                <td>{{ message.Id }}</td>
                                <td>
                                    <a href="{{ path('message_details', { id: message.Id }) }}">
                                        {{ message.Name }}
                                    </a>
                                </td>
                                <td>{{ message.Subject }}</td>
                                <td>{{ message.CreatedAt|date }}</td>
                                <td>
                                    {% if message.IsSeen %}
                                        <i class="fas fa-check-circle text-success"></i>
                                    {% else %}
                                        <i class="fas fa-times-circle text-danger"></i>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <strong>Count:
                {{ messagesCount }}</strong>
        </div>
    </div>

{% endblock %}
