{% extends 'admin/base.html.twig' %}

{% block title %}
    Message
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('dashboard')}}">Admin</a>
    </li>
    <li class="breadcrumb-item">
        <a href="{{ path('list_messages')}}">Messages</a>
    </li>
    <li class="breadcrumb-item active">
        Reply
    </li>

{% endblock %}


{% block body %}
    <div class="card">
        <form action="" method="POST">
            <input type="hidden" name="token" value="{{ csrf_token('send-email') }}"/>
            <div class="card-header">
                <h2>
                    <i class="fa fa-pen-fancy" aria-hidden="true"></i>
                    Reply to message
                </h2>
            </div>
            <div class="card-body">

                <div class="form-group">
                    <label for="email">Email address:</label>
                    <input type="text" name="email" id="email" value="{{ email }}" readonly class="form-control" required placeholder="Enter an email address">
                </div>

                <div class="form-group">
                    <label for="subject">Subject:</label>
                    <input type="text" name="subject" id="subject" class="form-control" required placeholder="Enter a subject">
                </div>

                <div class="form-group">
                    <label for="message">Message:</label>
                    <textarea name="message" id="message" rows="10" class="form-control" required placeholder="Enter your message"></textarea>
                </div>

            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-envelope"></i>
                    Send
                </button>
            </div>
        </form>
    </div>

{% endblock %}


{% block Scripts %}

    <script>
        $(document).ready(function () {
            $('#message').summernote({height: 300});
        });
    </script>

{% endblock %}
