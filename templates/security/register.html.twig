<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Register</title>

    <link rel="stylesheet" href="{{ asset('assets/css/fontawesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/register.css') }}">

</head>
<body>
    
        {{ form_start(form, { 'attr': { 'class': 'form-register' } }) }}
        
        <h1 class="h3 mb-3 font-weight-normal text-center">
                {{ SystemSettings.AppName }}
            </h1>
            <h6 class="mb-3 font-weight-normal text-center text-muted">
                Register admin user
            </h6>
    
                <div class="form-group">
                    <label for="user_first_name">First Name:</label>
                    {{form_widget(form.first_name, {'attr': {'class': 'form-control' , 'placeholder': 'Enter user first name' }})}}
                </div>
    
                <div class="form-group">
                    <label for="user_last_name">Last Name:</label>
                    {{form_widget(form.last_name, {'attr': {'class': 'form-control' , 'placeholder': 'Enter user last name' }})}}
                </div>
    
                <div class="form-group">
                    <label for="user_email">Email (Username):</label>
                    {{form_widget(form.email, {'attr': {'class': 'form-control' , 'placeholder': 'Enter user email' }})}}
                </div>
        
    
                
                <div class="form-group">
                    <label for="user_password_first">Password:</label>
                    {{form_widget(form.password.first, {'attr': {'class': 'form-control' , 'placeholder': 'Enter a password' }})}}
                </div>
                
                <div class="form-group">
                    <label for="user_password_second">Password Confirmation:</label>
                    {{form_widget(form.password.second, {'attr': {'class': 'form-control' , 'placeholder': 'Enter the password again' }})}}
                </div>
                
                <div class="form-group ">
                    <label for="user_isAdmin">Is Admin</label>
                    <input type="hidden" name="user[isAdmin]" value="0">
                    {{form_widget(form.isAdmin, { 'attr': { 'checked' : 'checked' } })}}
                </div>
    
                <div class="text-danger">
                    {{ form_errors(form.first_name) }}
                    {{ form_errors(form.last_name) }}
                    {{ form_errors(form.email) }}
                    {{ form_errors(form.isAdmin) }}
                    {{ form_errors(form.password.first) }}
                </div>
                <button class="btn  btn-secondary btn-block" type="submit">
                        Register
                        <i class="fas fa-check-circle"></i>
                    </button>
                    <p class="mt-3 mb-3 text-muted small">&copy; 2017-2018 <a href="{{path('home')}}">Home Page</a></p>
    
        </div>
    
        {{ form_end(form) }}
    
</body>
</html>