{% extends 'base.html.twig' %}

{% set imgPath = SystemSettings.LocationHeaderImage == null ? 'assets/images/track.jpg' :  'assets/images/uploads/' ~ SystemSettings.LocationHeaderImage %}


{% block title %}Find us{% endblock %}

{% block body %}

    <div class="header-image" style="background-image: url('{{ asset(imgPath) }}');">
        <div class="container">
            <h1 class="text-white contact-us-header-text">Find us</h1>
        </div>
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12">
                <h2>Find us on google maps:</h2>
                <hr>
                <iframe src="{{ SystemSettings.GoogleIframe }}"
                 width="100%" height="650" frameborder="0" style="border:0;" allowfullscreen="allowfullscreen"
                 ></iframe>

                 <div class="text-center">
                 <h5> {{ SystemSettings.AddressStreet }}</h5>
                 <p> {{ SystemSettings.AddressCity }}</p>
                 <p>  {{ SystemSettings.AddressCountry }}</p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}